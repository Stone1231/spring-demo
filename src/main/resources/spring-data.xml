	<!-- abstract datasource-->
	<bean id="abstractDataSource"
		class="org.apache.commons.dbcp2.BasicDataSource"
		destroy-method="close"
		abstract="true">
		<property name="driverClassName">
			<value>com.mysql.jdbc.Driver</value>
		</property>
		<property
			name="connectionProperties"
			value="useUnicode=yes;characterEncoding=UTF-8;pinGlobalTxToPhysicalConnection=true;autoReconnect=true;useSSL=false" />
		<property name="initialSize">
			<value>1</value>
		</property>
		<property name="maxTotal">
			<value>10</value>
		</property>
		<property name="minIdle">
			<value>2</value>
		</property>
		<property name="maxIdle">
			<value>3</value>
		</property>
		<property name="maxWaitMillis">
			<value>60000</value>
		</property>
		<!--  
		<property name="validationQuery">
			<value>SELECT 1</value>
		</property>
		-->
		<property name="removeAbandonedOnBorrow">
			<value>true</value>
		</property>
		<property name="removeAbandonedTimeout">
			<value>60</value>
		</property>
		<property name="logAbandoned">
			<value>true</value>
		</property>
		<property name="timeBetweenEvictionRunsMillis">
			<value>60000</value>
		</property>
		<property name="minEvictableIdleTimeMillis">
			<value>60000</value>
		</property>
		<property name="testOnBorrow">
			<value>false</value>
		</property>
		<property name="testOnReturn">
			<value>false</value>
		</property>
		<property name="testWhileIdle">
			<value>true</value>
		</property>
	</bean>
		
	<!-- sharding 1 -->	
	<bean id="shardingDataSourceTarget"
		parent="abstractDataSource">
		<property name="driverClassName">
			<value>${db.1.writeDriverClass}</value>
		</property>
		<property name="url">
			<value>${db.1.writeJdbcUrl}</value>
		</property>
		<property name="username">
			<value>${db.1.writeUser}</value>
		</property>
		<property name="password">
			<value>${db.1.writePassword}</value>
		</property>
		<property name="initialSize">
			<value>1</value>
		</property>
		<property name="maxTotal">
			<value>350</value>
		</property>
		<property name="minIdle">
			<value>2</value>
		</property>
		<property name="maxIdle">
			<value>3</value>
		</property>
	</bean>

	<!-- sharding 2 -->
	<bean id="shardingDataSource2Target"
		parent="abstractDataSource">
		<property name="driverClassName">
			<value>${db.2.writeDriverClass}</value>
		</property>
		<property name="url">
			<value>${db.2.writeJdbcUrl}</value>
		</property>
		<property name="username">
			<value>${db.2.writeUser}</value>
		</property>
		<property name="password">
			<value>${db.2.writePassword}</value>
		</property>
		<property name="initialSize">
			<value>1</value>
		</property>
		<property name="maxTotal">
			<value>350</value>
		</property>
		<property name="minIdle">
			<value>2</value>
		</property>
		<property name="maxIdle">
			<value>3</value>
		</property>
	</bean>

	<bean id="shardingDataSourceArrayFactoryBeanTarget"
		class="com.demo.dao.mysql.base.BasicDataSourceArrayFactoryBean">
		<property name="basicDataSourceArray">
			<array>
				<ref bean="shardingDataSourceTarget" />
				<ref bean="shardingDataSource2Target" />
			</array>
		</property>
	</bean>

	<bean id="shardingDataSourceArrayFactoryBean"
		class="com.demo.dao.mysql.base.LazyConnectionDataSourceProxyArrayFactoryBean">
		<property name="targetDataSources">
			<ref bean="shardingDataSourceArrayFactoryBeanTarget" />
		</property>
	</bean>
 
	<bean id="shardingJdbcTemplateArrayFactoryBean"
		class="com.demo.dao.mysql.base.NamedParameterJdbcTemplateArrayFactoryBean">
		<property name="targetDataSources">
			<ref bean="shardingDataSourceArrayFactoryBean" />
		</property>
		<!-- æœƒerror  
			<constructor-arg ref="shardingDataSourceArrayFactoryBean" />
		-->
	</bean>
	
	<!-- for @Transactional annotation -->
	<bean id="transactionManager"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property
			name="dataSource"
			ref="shardingDataSourceTarget" />
	</bean>
	<tx:annotation-driven
		proxy-target-class="true"
		transaction-manager="transactionManager" />

